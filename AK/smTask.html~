<html>
	<head>
		<title>Over me</title>
		<style>
			body{
				background-color: antiquewhite;
			}
			#img_wrapper{
				
				position: relative;
				padding: 0px;

			}
			img{
				border-style: groove;
				border-width: 0px;
				cursor: pointer;
				margin: 0px;

			}
		</style>
	</head>

	<body>
		<div id="img_wrapper">
			<img src="ak.jpg" onmousemove="capCoords(event)" title="hello" id="ab" />
		</div>

		<script>
			var img_wrap=document.getElementById("img_wrapper")
			var width=screen.availWidth/(2.5),height=screen.availHeight/4;
			var coord=[] 
			
			img_wrap.style.top=height+'px';
			img_wrap.style.left=width+'px';

			function capCoords(e){
				//console.log((e.clientX-width)+" "+(e.clientY-height));
				coord.push(new getCoord(e.clientX-width,e.clientY-height)); 
				document.getElementById("ab").title=(e.clientX-width)+","+(e.clientY-height);

			}

			function getCoord(X,Y){
				this.x=X;
				this.y=Y;
			}

		</script>
	</body>
</html>
